{
    "runOnSave.statusMessageTimeout": 3000,
    "runOnSave.commands": [
        {
            // Match less files except names start with `_`.
            "globMatch": "**/*.md",
            "notMatch": "README.md",
            "command": "${fileDirname}/run-pandoc.sh ${fileDirname}/${fileBasenameNoExtension}",
            "runIn": "terminal"
        }
    ]
}